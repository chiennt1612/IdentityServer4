@model IdentityServer.Models.AccountViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot your password?";
}

@*<h2>@ViewData["Title"]</h2>*@
@*<h4>Enter your email.</h4>
<hr />*@
<div class="box-background-image">
    <!-- <img style="width: 100%; height: 100%;" src="/images/background.png" /> -->
    <div class="bground"></div>
    <div class="box-logo">
        <img src="/images/logo.png" />
        <p class="text-greeting">Start learning new things daily!</p>
    </div>
</div>
<div class="box-main">
    <div class="box-header-title">
        <h1>@ViewData["Title"]</h1>
    </div>
    @*<div class="col-md-4">*@
        <form asp-action="ForgotPassword" method="post" class="box-form">
            @*<div asp-validation-summary="All" class="text-danger"></div>*@
            <div class="form-group">
                @*<label asp-for="Email"></label>*@
                <input asp-for="Email" class="form-control" placeholder="Nhập Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn box-button"><p class="text-submit">Xác Nhận Email</p></button>
        </form>
    @*</div>*@
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
